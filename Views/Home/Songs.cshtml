@{
  ViewData["Title"] = "Songs";
}
@model Song

<div class="text-center">
  <div class="row">
    <div class="col-6">
      <h1>Add Song</h1>
      <form action="/song/create" method="post">
        <div class="form-group">
          <label for="Title">Title</label>
          <input asp-for="Title" class="form-control">
          <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
          <label for="Minutes">Minutes</label>
          <input asp-for="Minutes" class="form-control">
          <span asp-validation-for="Minutes"></span>
        </div>
        <div class="form-group">
          <label for="Seconds">Seconds</label>
          <input asp-for="Seconds" class="form-control">
          <span asp-validation-for="Seconds"></span>
        </div>
        <div class="form-group">
          <label for="ArtistId">Artist</label>
          <select asp-for="ArtistId" class="form-control">
            @foreach (Artist a in ViewBag.AllArtists)
            {
              <option value="@a.ArtistId">@a.Name</option>
            }
          </select>
        </div>
        <div class="form-group">
          <input type="submit" value="Submit" class="btn btn-primary">
        </div>
      </form>
    </div>
    <div class="col-6">
      <h1>All Songs</h1>
      <ul>
        @foreach (Song s in ViewBag.AllSongs)
        {
          <li>@s.Title (@s.Minutes:@s.Seconds.ToString().PadLeft(2,'0')) by @s.Performer.Name</li>
        }
      </ul>
    </div>
  </div>
</div>